<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343a40"
    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_logo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        >

        <LinearLayout
            android:id="@+id/layout_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/login_name"/>

            <EditText
                android:id="@+id/et_login_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="#ffffff"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:hint="Phone" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:src="@drawable/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:hint="Password" />


        </LinearLayout>
        <RelativeLayout
            android:layout_below="@id/layout_linear_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#28b779"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:text="登录"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
            android:id="@+id/login_forget"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/login"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="忘记密码"
            android:padding="5dp"

            />
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/login"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:text="账号注册"
                android:padding="5dp"
                />
    </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_logo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/layout_linear_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/login_name"/>

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="#ffffff"
                android:ems="10"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:hint="Phone" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_linear_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_3"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:src="@drawable/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:hint="Password" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_linear_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_4"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:src="@drawable/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/et_register_password_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:hint="Password again" />
        </LinearLayout>
        <TextView
            android:layout_below="@id/layout_linear_5"
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#28b779"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:text="注册"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="账号登录"
            android:padding="5dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_title" />
</RelativeLayout>